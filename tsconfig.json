{
    "compilerOptions": {
        "target": "ES2020",
        "rootDir": "./src",
        "outDir": "./build/",
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node"],
        "lib": ["ES2020"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./build/**"
    ]
}